
pipeline {
    agent { label "java-node" }

    stages {
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AuthorizeNet/sample-code-java.git'
            }
        }
        stage('test') {
            steps {
                echo "running static test on code"
            }
        }
        stage('build') {
           when{
              branch "master"
            }
            steps {
                sh 'echo "building the code "'
            }
        }
        stage('deploy') {
            steps {
                echo "deploying into dev environment"
                
            }
        }
    }
}
