

pipeline {
    agent any
    parameters {
        choice(name: 'deploy_to',choice:['dev', 'qa', 'prod'])

    stages {
        stage('checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AuthorizeNet/sample-code-java.git'
            }
        }
        stage('test') {
            steps {
                echo "running static test on code"
            }
        }
        stage('build') {
           when{
              branch "main"
            }
            steps {
                sh 'echo "building the code "'
            }
        }
        stage('deploy') {
               when {
                   environment name: 'deploy_to', value: 'prod'
                 }
            steps {
                echo "deploying into dev environment"
                
            }
        }
    }
